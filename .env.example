# =============================================================================
# DADISI BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Dadisi Community Labs"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=dadisi
DB_USERNAME=root
DB_PASSWORD=

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost:3000

# -----------------------------------------------------------------------------
# Broadcasting (Pusher - Real-time WebSockets)
# -----------------------------------------------------------------------------
# Sign up for free at https://pusher.com
# Free tier: 100 connections, 200K messages/day
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_SECRET=your-pusher-app-secret
PUSHER_APP_CLUSTER=your-pusher-app-cluster

# -----------------------------------------------------------------------------
# Cloudflare R2 (Encrypted Message Storage)
# -----------------------------------------------------------------------------
# Sign up at https://dash.cloudflare.com
# Free tier: 10GB storage, 1M reads/month
CLOUDFLARE_R2_ACCESS_KEY_ID=your-cloudflare-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-cloudflare-r2-secret-access-key
CLOUDFLARE_R2_BUCKET=dadisi
CLOUDFLARE_R2_ENDPOINT=your-cloudflare-r2-endpoint
CLOUDFLARE_R2_PUBLIC_URL=your-cloudflare-r2-public-url

# -----------------------------------------------------------------------------
# Mail
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# Payments (Pesapal)
# -----------------------------------------------------------------------------
PESAPAL_CONSUMER_KEY=
PESAPAL_CONSUMER_SECRET=
PESAPAL_WEBHOOK_SECRET=
PESAPAL_ENV=sandbox
PESAPAL_API_URL_SANDBOX=https://cybqa.pesapal.com/pesapalv3/api
PESAPAL_API_URL_LIVE=https://pay.pesapal.com/v3/api
PESAPAL_CALLBACK_URL=${APP_URL}/payment/callback
PESAPAL_IPN_URL=${APP_URL}/api/webhooks/pesapal

# -----------------------------------------------------------------------------
# External APIs
# -----------------------------------------------------------------------------
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
EXCHANGE_RATE_API_BASE_URL=https://v6.exchangerate-api.com/v6/

# -----------------------------------------------------------------------------
# Cache, Queue, Session
# -----------------------------------------------------------------------------
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single,sentry_logs
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Sentry (Error Monitoring & Performance)
# -----------------------------------------------------------------------------
# Sign up at https://sentry.io (Free tier: 5K errors/month)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0
SENTRY_ENABLE_LOGS=true
